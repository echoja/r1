{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "outDir": "./build",
    "incremental": true,
    "baseUrl": "../",
    "paths": {
      "@/*": ["server/src/*"],
      "@typedef": ["typedef"]
    }
  },
  "include": [
    "src/**/*",
    "../typedef.ts",
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}