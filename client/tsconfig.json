{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    // "plugins": [""],
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "node"
    ],
    "isolatedModules": true,
    "skipLibCheck": true,
    "diagnostics": true,
    "listFilesOnly": true,
  },
  "include": [
    "client/src/**/*.ts",
    "client/src/**/*.d.ts",
    "client/src/**/*.tsx",
    "client/src/**/*.vue"
  ],
}